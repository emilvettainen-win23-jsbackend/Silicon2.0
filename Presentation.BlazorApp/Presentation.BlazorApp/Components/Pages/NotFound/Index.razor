@page "/not-found"
<PageTitle>Not Found</PageTitle>

<section class="not-found">
    <div class="container">
        <div class="content">
            <img id="not-found-img" src="/images/not-found/@(IsDarkMode ? "404-dark.svg" : "404-light.svg")" alt="Not Found">
            <h1 class="d5">Ooops!</h1>
            <p class="text-xl">The page you are looking for is not available.</p>
        </div>
        <nav>
            <a class="btn-theme-medium" href="/"><i class="fa-regular fa-house"></i>Go to homepage</a>
        </nav>
    </div>
</section>


@code {

    private bool IsDarkMode { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var currentUser = authState.User;

        var user = await UserService.GetCurrentUserAsync();


        IsDarkMode = user.DarkMode;
    }
}